{
    "manifest_version": 3,
    "name": "Pocketstox: AI Stock Discovery App",
    "description": "Extension reads articles for you and uses algorithms to determine stocks most affected.",
    "version": "1.0",
    "action": {
        "default_popup": "./popup.html"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "assets/images/16x16.png",
        "32": "assets/images/32x32.png",
        "48": "assets/images/48x48.png",
        "128": "assets/images/128x128.png"
    },
    "web_accessible_resources": [{
        "resources": ["src/lib/Readability.min.js"],
        "matches": ["<all_urls>"]
    }]
}